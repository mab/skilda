<html>
  <body>
  <h1><%= person.name %></h1>

  <h2>Skills</h2>
  <ul>
    <% person.skills_rels.each do |skills_rel| %>
        <% skill = skills_rel.end_node %>
        <li><%= skill.name %> (<%= SKILL_LEVELS[skills_rel[:level]] %>)</li>
    <% end %>
  </ul>

  <h2>Projects</h2>
  <ul>
    <% person.projects_rels.each do |projects_rel| %>
        <% project = projects_rel.end_node %>
        <li><%= project.title %></li>
    <% end %>
  </ul>
  </body>
</html>

